<script>
    window.addEventListener('DOMContentLoaded', function () {
        const passwordInput = document.getElementById('passwordInput'); // Ensure you're targeting the right field
        const togglePassword = document.getElementById('togglePassword');

        // Set initial padding-right when the page loads (for the icon position)
        passwordInput.style.paddingRight = '2.5rem'; // Adjust this value as needed

        togglePassword.addEventListener('click', function () {
            // Toggle the class that controls the dots appearance
            passwordInput.classList.toggle('password');

            // Toggle the icon text between 'visibility' and 'visibility_off'
            this.textContent = passwordInput.classList.contains('password') ? 'visibility_off' : 'visibility';
        });
    });
</script>