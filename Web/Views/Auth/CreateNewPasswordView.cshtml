@using EcomSiteMVC.Core.DTOs
@{
	ViewData["Title"] = "Create New Password";
}

@model NewPasswordFromResetDTO

<link rel="stylesheet" href="~/css/Auth.css" type="text/css" />

<div class="form-container p-3 mt-5 border rounded-3 m-auto text-center shadow">
	<h1 class="text-center mb-2">@ViewData["Title"]</h1>
	<p class="text-secondary mb-4">Create a strong alpha-numeric password.</p>

	<form asp-action="ResetPassword" method="post">
		@Html.Hidden("Email", Model.Email)
		<div class="form-floating">
			<input type="password" asp-for="NewPassword" name="NewPassword" class="form-control form-group" placeholder="New Password" />
			<label>New Password</label>
			<span asp-validation-for="NewPassword" class="text-danger"></span>
		</div>

		<div class ="form-floating">
			<input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control form-group" placeholder="Confirm Password" />
			<label>Confirm New Password</label>
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>

		<button type="submit" class="sendlink-button btn btn-primary w-100 mt-3 mb-3">Send Link</button>
	</form>
</div>
