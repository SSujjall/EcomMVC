@{
	ViewData["Title"] = "E-Commerce Landing Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="Index.cshtml.css" rel="stylesheet">

<div class="landing-page">
	<!-- Hero Section -->
	<div class="hero-section text-center">
		<h1 class="display-3">Welcome to ShopEasy</h1>
		<p class="lead">Your one-stop shop for everything you need!</p>
		<a class="btn btn-primary btn-lg" href="/Product/CustomerProductView">Shop Now</a>
	</div>

	<!-- Features Section -->
	<div class="features-section container py-5">
		<div class="row text-center">
			<div class="col-md-4">
				<i class="bi bi-bag-check feature-icon"></i>
				<h3>High-Quality Products</h3>
				<p>Choose from a wide range of quality-assured products.</p>
			</div>
			<div class="col-md-4">
				<i class="bi bi-truck feature-icon"></i>
				<h3>Fast Delivery</h3>
				<p>Get your orders delivered at lightning speed.</p>
			</div>
			<div class="col-md-4">
				<i class="bi bi-wallet2 feature-icon"></i>
				<h3>Secure Payments</h3>
				<p>Experience safe and secure online payments.</p>
			</div>
		</div>
	</div>

	<!-- Trending Products Section -->
	<div class="trending-section container py-5 mb-5">
		<h2 class="text-center mb-5">Trending Products</h2>
		<div class="row">
			<!-- Product 1 -->
			<div class="col-md-4">
				<div class="card product-card">
					<img src="https://via.placeholder.com/300" class="card-img-top" alt="Product 1">
					<div class="card-body text-center">
						<h5 class="card-title">Product 1</h5>
						<p class="card-text">$49.99</p>
						<a href="/Product/Details/1" class="btn btn-primary">View Details</a>
					</div>
				</div>
			</div>
			<!-- Product 2 -->
			<div class="col-md-4">
				<div class="card product-card">
					<img src="https://via.placeholder.com/300" class="card-img-top" alt="Product 2">
					<div class="card-body text-center">
						<h5 class="card-title">Product 2</h5>
						<p class="card-text">$59.99</p>
						<a href="/Product/Details/2" class="btn btn-primary">View Details</a>
					</div>
				</div>
			</div>
			<!-- Product 3 -->
			<div class="col-md-4">
				<div class="card product-card">
					<img src="https://via.placeholder.com/300" class="card-img-top" alt="Product 3">
					<div class="card-body text-center">
						<h5 class="card-title">Product 3</h5>
						<p class="card-text">$69.99</p>
						<a href="/Product/Details/3" class="btn btn-primary">View Details</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>