@model IEnumerable<EcomSiteMVC.Models.Entities.CartItem>;

@{
    ViewData["Title"] = "Cart";
}

<h1>Cart</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>@item.Product.ImageUrl</td>
                <td>img</td>
                <td>img</td>
                <td>img</td>
            }
        </tr>
    </tbody>
</table>