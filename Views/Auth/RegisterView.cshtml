@model EcomSiteMVC.Models.DTOs.RegisterDTO

@{
    ViewData["Title"] = "Register";
}

<style>
    .form-container {
        max-width: 25rem;
        min-width: 20rem;
        background-color: white;
    }

    .form-group {
        margin-bottom: 1rem;
    }

        .form-group input {
            text-align: center;
            padding-top: 0.8rem;
            padding-bottom: 0.8rem;
        }

    .register-button, .google-button {
        height: 3rem;
        align-content: center;
        font-weight: 700;
    }

        .google-button:hover {
            color: #0d6efd;
            transition: 0.1s;
            background: none;
            border-color: #0d6efd;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1rem 0;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #ddd;
        }

        .divider::before {
            margin-right: 0.5em;
        }

        .divider::after {
            margin-left: 0.5em;
        }
</style>

<div class="form-container p-3 mt-5 border rounded-3 m-auto text-center shadow">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <form asp-action="Register" method="post">
        <div class="form-group">
            <input placeholder="Username" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input placeholder="Email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input placeholder="Password" asp-for="PasswordHash" type="password" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>

        <button type="submit" class="register-button btn btn-primary w-100 mt-3 mb-3">Register</button>

        <span>
            Already have an account?
            <a asp-controller="Auth" asp-action="LoginView" style="text-decoration: none;">Login</a>
        </span>

        <div class="divider">
            <span>or</span>
        </div>

        <a asp-controller="Auth" asp-action="GoogleLoginPage" class="google-button btn btn-outline-dark w-100">
            <i class="fab fa-google" style="margin-right: 8px;"></i> Sign-in with Google
        </a>
    </form>
</div>