@model EcomSiteMVC.Models.DTOs.RegisterDTO

@{
	ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Auth.css" type="text/css" />

<div class="form-container p-3 mt-5 border rounded-3 m-auto text-center shadow">
	<h1 class="text-center mb-4">@ViewData["Title"]</h1>
	<form asp-action="Register" method="post">
		<div class="form-floating">
			<input placeholder="Username" asp-for="Username" class="form-control form-group" />
			<label>Username</label>
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>

		<div class="form-floating">
			<input placeholder="Email" asp-for="Email" class="form-control form-group" />
			<label>Email</label>
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>

		<div class="form-floating position-relative">
			<input id="passwordInput" placeholder="Password" asp-for="PasswordHash" type="password" class="form-control form-group password" />
			<label>Password</label>
			<span asp-validation-for="PasswordHash" class="text-danger"></span>
			<span id="togglePassword"
				  class="material-symbols-outlined position-absolute">
				visibility_off
			</span>
		</div>

		<button type="submit" class="register-button btn btn-primary w-100 mt-3 mb-3">Register</button>

		<span>
			Already have an account?
			<a asp-controller="Auth" asp-action="LoginView" style="text-decoration: none;">Login</a>
		</span>

		<div class="divider">
			<span>or</span>
		</div>

		<a asp-controller="Auth" asp-action="GoogleLoginPage" class="google-button btn btn-outline-dark w-100">
			<i class="fab fa-google" style="margin-right: 5px;"></i> Sign-in with Google
		</a>
	</form>
</div>

@*Importing toogle script*@
@await Html.PartialAsync("_TogglePasswordScript")