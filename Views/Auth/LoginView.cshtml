@model EcomSiteMVC.Models.DTOs.LoginDTO
@{
    ViewData["Title"] = "Login";
}
<style>
    .form-container {
        max-width: 25rem;
        min-width: 20rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

        .form-group input {
            text-align: center;
            padding-top: 0.8rem;
            padding-bottom: 0.8rem;
        }

    .login-button {
        height: 3rem;
    }
</style>

<div class="form-container p-3 mt-5 border rounded-3 m-auto text-center shadow-sm">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <input placeholder="Username" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input placeholder="Password" asp-for="PasswordHash" type="password" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <button type="submit" class="login-button btn btn-primary w-100 mt-3">Login</button>
    </form>
    <div class="mt-2">
        <a asp-controller="Auth" asp-action="RegisterView">Don't have an account? Register here.</a>
    </div>
</div>